<h2>Summary</h2>

<table>
  <thead>
    <tr>
      <th>Total Mogi</th>
      <th>Score Ave.</th>
      <th>Solo Rank Ave.</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @mogis.count %></td>
      <td><%= @mogis.average(:total_score) %></td>
      <td><%= @mogis.average(:solo_rank) %></td>
    </tr>
  </tbody>
</table>

<h2>History</h2>

<% @mogis_last.each do |mogi| %>
<h3>
<%= link_to "【#{mogi.mogi_type.name}】 #{mogi.created_at}", mogi_path(mogi) %>
</h3>
    <table>
    <thead>
      <tr>
        <th>Score</th>
        <th>Team Rank</th>
        <th>Solo Rank</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= mogi.total_score %> </td>
        <td><%= mogi.team_rank %></td>
        <td><%= mogi.solo_rank %></td>
      </tr>
    </tbody>
    <thead>
      <tr>
        <th>#</th>
        <th>Track</th>
        <th>Rank</th>
      </tr>
    </thead>
    <tbody>
      <% mogi.mogi_results.each.with_index(1) do |mogi_result, index| %>
        <tr>
          <td><%= index %></td>
          <td><%= link_to mogi_result.track.name, track_path(mogi_result.track) %></td>
          <td><%= mogi_result.rank %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
